<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{textarea cols="80" rows="6" value=description id="description" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="cost">Cost</label>
    {{input value=cost id="cost" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="image">Image (URL)</label>
    {{input value=image id="image" class="form-control"}}
  </div>

  <button {{action 'save'}} class="btn btn-success">SAVE</button>
</form>
